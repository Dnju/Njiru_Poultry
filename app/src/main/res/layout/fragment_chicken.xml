<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="383dp"
        android:layout_height="591dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/chicken_background"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/chicken_header"
            android:layout_width="197dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/chicken_background"
            android:gravity="center"
            android:text="  Chickens"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/Et_chicken"
            android:layout_width="285dp"
            android:layout_height="78dp"
            android:ems="10"

            android:hint="Chicken:"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Et_vaccine"
            android:layout_width="285dp"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="Vaccine:"

            android:inputType="textPersonName"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Chicken_Save_button"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/chicken_background"
            android:text="save"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>