<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nav_Chicken"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/chicken_header"
        android:layout_width="349dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/chickens"
        android:textColor="#1E88E5"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="353dp"
        android:layout_height="649dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/chicken_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chicken_header"
        app:layout_constraintVertical_bias="0.0">

        <AutoCompleteTextView
            android:id="@+id/Et_chicken"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="16dp"
            android:hint="Chicken:"
            android:textColorHighlight="#1E88E5"
            android:textColorHint="#1E88E5"
            android:textColorLink="#1E88E5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="593dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Et_chicken"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/drop_down" />

        <AutoCompleteTextView
            android:id="@+id/Et_vaccine"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:hint="Vaccine:"
            android:textColorHighlight="#1E88E5"
            android:textColorHint="#1E88E5"
            android:textColorLink="#1E88E5"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Et_chicken" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="532dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Et_vaccine"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/drop_down" />

        <Button
            android:id="@+id/Chicken_Save_button"
            android:layout_width="75dp"
            android:layout_height="41dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="205dp"
            android:layout_marginBottom="483dp"
            android:background="@drawable/chicken_background"
            android:text="save"
            android:textColor="#1E88E5"
            android:textColorHighlight="#1E88E5"
            android:textColorLink="#1E88E5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Et_vaccine"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>