<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nav_Vaccines"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Vaccines"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:hint="Vaccines"

        android:textAlignment="center"
        android:textColorHint="#1E88E5"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="662dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="41dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vaccines"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Vaccine:"
            android:inputType="textPersonName"
            android:textColor="#0B0909"
            android:textColorHint="#1E88E5"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:textColorHint="#1E88E5">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Description:"
                android:textColor="#111213"
                android:textColorHighlight="#1E88E5"
                android:textColorHint="#1E88E5"
                android:textColorLink="#1E88E5" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Chicken:"
            android:inputType="textPersonName"
            android:textColor="#0C0C0C"
            android:textColorHighlight="#1E88E5"
            android:textColorHint="#1E88E5"
            android:textColorLink="#1E88E5" />

        <Button
            android:id="@+id/button2"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#1E88E5" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>