<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vaccine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vacc_name"
        android:layout_width="391dp"
        android:layout_height="157dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="266dp"
            android:layout_height="158dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/egg_qnty"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/List_Vaccine"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:id="@+id/List_Desc"
                android:layout_width="match_parent"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/List_Chicken"
                android:layout_width="match_parent"
                android:layout_height="38dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/egg_qnty"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:text=" Vaccine:"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Desc"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="7dp"
            android:text=" Description:"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/egg_qnty" />

        <TextView
            android:id="@+id/chicke_name"
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:text="Chicken:"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Desc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>