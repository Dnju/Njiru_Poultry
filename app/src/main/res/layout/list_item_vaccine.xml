<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vaccine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vacc_name"
        android:layout_width="391dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/List_Vaccine"
                android:layout_width="319dp"
                android:layout_height="54dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/egg_qnty"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/List_Desc"
                android:layout_width="295dp"
                android:layout_height="62dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Desc"
                app:layout_constraintTop_toBottomOf="@+id/List_Chicken" />

            <TextView
                android:id="@+id/List_Chicken"
                android:layout_width="318dp"
                android:layout_height="57dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/List_Desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/List_Vaccine" />

            <TextView
                android:id="@+id/egg_qnty"
                android:layout_width="58dp"
                android:layout_height="34dp"
                android:layout_gravity="left"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text=" Vaccine:"
                app:layout_constraintEnd_toStartOf="@+id/List_Vaccine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chicke_name"
                android:layout_width="57dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:text="Chicken:"
                app:layout_constraintEnd_toStartOf="@+id/List_Chicken"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/egg_qnty" />

            <TextView
                android:id="@+id/Desc"
                android:layout_width="82dp"
                android:layout_height="37dp"
                android:layout_marginBottom="70dp"
                android:text=" Description:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/List_Desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/List_Chicken" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>